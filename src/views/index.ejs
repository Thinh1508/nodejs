<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Nodejs</title>
    <link rel="stylesheet" href="/css/style.css" />
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css" />
  </head>
  <body>
    <div class="topnav">
      <a class="active" href="#home">Home</a>
      <a href="new">New Account</a>
      <a href="#contact">Contact</a>
      <a href="#about">About</a>
    </div>

    <div style="padding-left: 16px">
      <h2>List user</h2>
      <div>
        <table class="w3-table-all w3-hoverable">
          <thead>
            <tr class="w3-light-grey">
              <th>STT</th>
              <th>First Name</th>
              <th>Last Name</th>
              <th>Action</th>
            </tr>
          </thead>
          <tbody>
            <% for(let i=0; i < dataUser.length; i++) { %>
            <tr>
              <td><%= i+1 %></td>
              <td><%= dataUser[i].firstName %></td>
              <td><%= dataUser[i].lastName %></td>
              <td>
                <button
                  onclick="document.getElementById('id01').style.display='block'"
                >
                  Detail
                </button>
                <!-- <button type="button">
                  <a href="/detail/user/<%= dataUser[i].id %>">Detail</a>
                </button> -->
                <button type="button">
                  <a href="/update/<%= dataUser[i].id %>">Edit</a>
                </button>
                <div class="delete-user">
                  <form action="/delete-user" method="POST">
                    <input
                      type="text"
                      hidden
                      name="userId"
                      value="<%= dataUser[i].id %>"
                    />
                    <button type="submit">Delete</button>
                  </form>
                </div>
              </td>
              <div id="id01" class="w3-modal">
                <div class="w3-modal-content">
                  <div class="w3-container">
                    <span
                      onclick="document.getElementById('id01').style.display='none'"
                      class="w3-button w3-display-topright"
                      >&times;</span
                    >
                    <p><b>FirstName:</b> <%= dataUser[i].firstName %></p>
                    <p><b>LastName:</b> <%= dataUser[i].lastName %></p>
                    <p><b>Email:</b> <%= dataUser[i].email %></p>
                    <p><b>Address:</b> <%= dataUser[i].address %></p>
                  </div>
                </div>
              </div>
            </tr>
            <% } %>
          </tbody>
        </table>
      </div>
    </div>
  </body>
</html>
